{
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "Image",
                            "url": "https://m365search.blob.core.windows.net/images/session-icon.png",
                            "size": "Medium",
                            "horizontalAlignment": "Center",
                            "altText": "session logo"
                        }
                    ],
                    "height": "stretch"
                },
                {
                    "type": "Column",
                    "width": 8,
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "[${title}](https://www.collabsummit.eu/en/lectures/1193/develop-your-own-connectors-to-integrate-your-business-data-in-microsoft-search)",
                            "color": "Accent",
                            "size": "Large",
                            "weight": "Bolder"
                        },
                        {
                            "type": "TextBlock",
                            "text": "**${speaker}**",
                            "spacing": "Small",
                            "size": "Medium",
                            "weight": "Bolder",
                            "$when": ""
                        },                        {
                            "type": "TextBlock",
                            "text": "Start: {{DATE(${date})}}",
                            "spacing": "Small",
                            "weight": "Bolder",
                            "$when": ""
                        },
                        {
                            "type": "TextBlock",
                            "text": "Room: ${room}",
                            "spacing": "Small",
                            "$when": ""
                        },
                        {
                            "type": "TextBlock",
                            "text": "Audience: ${audience}",
                            "spacing": "Small",
                            "$when": ""
                        },
                        {
                            "type": "TextBlock",
                            "text": "${type}",
                            "spacing": "Small",
                            "$when": ""
                        },
                        {
                            "type": "TextBlock",
                            "text": "Id: ${id}",
                            "spacing": "Small",
                            "$when": ""
                        },
                        {
                            "type": "TextBlock",
                            "text": "**This session is part of the ${audience} summit.**",
                            "spacing": "Small",
                            "size": "Small",
                            "$when": ""
                        }
                    ],
                    "horizontalAlignment": "Center",
                    "spacing": "Medium"
                },
                {
                    "type": "Column",
                    "width": 2,
                    "items": [
                        {
                            "type": "Image",
                            "url": "https://m365search.blob.core.windows.net/images/collab-icon.png",
                            "altText": "Result logo",
                            "size": "Medium",
                            "horizontalAlignment": "Right"
                        }
                    ]
                }
            ]
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
}